<?php

use Illuminate\Database\Seeder;
use App\User;
use App\Article;

class DatabaseSeeder extends Seeder
{
    /**
     * Run the database seeds.
     *
     * @return void
     */
    public function run()
    {
        DB::statement('SET FOREIGN_KEY_CHECKS = 0');
        
        User::truncate();
        Article::truncate();
        
        $cantidadUsuarios = 10;
        $cantidadArticles = 10;
        
        factory(User::class, $cantidadUsuarios)->create();
        factory(Article::class, $cantidadArticles)->create();
    }
}
